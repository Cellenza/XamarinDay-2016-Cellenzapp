<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	Title="Cell'Experts"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Cellenzapp.Forms.Views.CellExpertsPage"
	BindingContext="{Binding CellExpertsViewModel, Source={StaticResource ViewModelLocator}}">
	<ContentPage.Content>
		<ListView x:Name="ListViewMenu" ItemsSource="{Binding CellExperts,Mode=TwoWay}" HasUnevenRows="True" Grid.Row="1" SeparatorColor="{StaticResource CellenzaPinkDark}" VerticalOptions="Start" HorizontalOptions="Fill">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Margin="16" HeightRequest="25" Source="{Binding ProfileImage}" WidthRequest="25" />
                            <Label VerticalOptions="Center" Grid.Column="1" FontSize="22" LineBreakMode="TailTruncation" TextColor="{StaticResource CellenzaPinkDark}" Text="{Binding Path=Value.Title}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</ContentPage.Content>
</ContentPage>